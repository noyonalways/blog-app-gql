{
  "name": "blog-app-gql",
  "version": "1.0.0",
  "description": "- User can post and publish blog content\r - User can view blog content\r - Authentication System\r - User can see their own profile",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "eslint ./src && tsc && npx prettier --write --ignore-path .prettierignore ./dist",
    "format": "prettier ./src --write",
    "format:check": "prettier ./src --check",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "prisma:migrate": "npx dotenv-cli -e .env.development.local -- npx prisma migrate dev",
    "prisma:studio": "npx dotenv-cli -e .env.development.local -- npx prisma studio",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Noyon Rahman",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@prisma/client": "^6.5.0",
    "bcrypt": "^5.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "express": "4.17.0",
    "graphql": "^16.10.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.17",
    "add": "^2.0.6",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3",
    "ts-node-dev": "^2.0.0",
    "tsc": "^2.0.4",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "yarn": "^1.22.22"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
